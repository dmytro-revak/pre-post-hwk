doctype
html
    head
        meta
        link(rel="stylesheet" href="styles/normalise.css")
        link(rel="stylesheet" href="styles/style.css")
        title Pre/Post HWK
    body
        // first section
        section.first-section
            .google
                .google-title
                    - var letters = ["G", "o", "o", "g", "l", "e", "!"];
                    for letter in letters
                        span.title-letters #{letter}
            .search-elements
                h3 Search the web using Google!
                input(name="search-line" type="text" class="search-line")
                .search-buttons
                    select.results(name="results")
                        - for (var i=10; i >=1; i--) {
                            option(value=i  + " result") #{i} results
                        - }
                    input(value="Google Search" type="submit")
                    input(value="I'm feeling lucky" type="button")
                h3 Index contains ~25 million pages (soon to be much bigger)
    
        // second section
        .second-section
            - var url = '#';
            h2.about-link
                a(href='' + url ) About Google!
            br
            a.searches(href='' + url) Stanford Search
            a.searches(href='' + url) Linux Search
            br 
            .main-section
                span.inside Get Google! updates monthly!
                br
                form
                    input.buttons(
                        type='email'
                        name='mail'
                        placeholder='your e-mail'
                    )
                    input.buttons(
                        type='submit'
                        name='subscribe'
                        value='Subscribe'
                    )
                    a.archive(href='' + url) Archive
            footer.copyrights
                small Copyright Â©1997-8 Stanford University